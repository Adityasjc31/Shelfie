# ==========================================
# DATABASE CREDENTIALS - EXAMPLE FILE
# ==========================================
# Copy this file to .env and update with your actual credentials
# The .env file is in .gitignore and will not be committed

# MySQL Database Credentials
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Database Names for Each Service
DB_INVENTORY=bookstore_inventory
DB_USER=bookstore_user
DB_BOOK=bookstore_book
DB_ORDER=bookstore_order
DB_REVIEW=bookstore_review
DB_AUTH=bookstore_auth

# Database Connection Options
DB_OPTIONS=createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC

# ==========================================
# SECURITY CREDENTIALS
# ==========================================
# JWT Configuration (Generate a strong secret for production)
JWT_SECRET=change_this_to_a_strong_secret_key_in_production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Gateway Secret Token (Generate a strong token for production)
GATEWAY_SECRET_TOKEN=change_this_gateway_secret_in_production

# ==========================================
# EUREKA CONFIGURATION
# ==========================================
EUREKA_HOST=localhost
EUREKA_PORT=8761
EUREKA_URL=http://${EUREKA_HOST}:${EUREKA_PORT}/eureka/

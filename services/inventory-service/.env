# ==========================================
# DATABASE CREDENTIALS
# ==========================================
# Note: This file should be added to .gitignore to keep credentials secure
# For production, use actual environment variables or a secrets manager

# MySQL Database Credentials
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=admin

# Database Names for Each Service
DB_INVENTORY=bookstore_inventory
DB_USER=bookstore_user
DB_BOOK=bookstore_books
DB_ORDER=bookstore_order
DB_REVIEW=bookstore_review
DB_AUTH=bookstore_auth

# Database Connection Options
DB_OPTIONS=createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC

# ==========================================
# SECURITY CREDENTIALS
# ==========================================
# JWT Configuration
JWT_SECRET=your_256_bit_secret_key_change_in_production_use_env_variable_for_security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Gateway Secret Token
GATEWAY_SECRET_TOKEN=dev-gateway-secret-change-in-production

# ==========================================
# EUREKA CONFIGURATION
# ==========================================
EUREKA_HOST=localhost
EUREKA_PORT=8761
EUREKA_URL=http://${EUREKA_HOST}:${EUREKA_PORT}/eureka/
